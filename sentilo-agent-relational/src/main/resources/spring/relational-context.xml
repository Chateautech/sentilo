<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xmlns:context="http://www.springframework.org/schema/context"		
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">

	<context:annotation-config />	
		
	<import resource="classpath:spring/relational-properties-service-context.xml" />
	<import resource="classpath:spring/relational-persistence-context.xml" />
	<import resource="classpath:spring/relational-pubsub-context.xml" />
						
	<context:component-scan base-package="org.sentilo.agent.relational.business.service" />
	<context:component-scan base-package="org.sentilo.agent.relational.business.repository" />		 	
	<context:component-scan base-package="org.sentilo.agent.relational.event" />
	<context:component-scan base-package="org.sentilo.agent.relational.listener" />
</beans>