<?xml version="1.0" encoding="UTF-8"?>

<configuration>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} %logger{36} [%thread] %-5level - %msg%n
			</pattern>
		</encoder>
	</appender>

	<logger name="org.sentilo.web.demo" level="DEBUG" additivity="false">
		<appender-ref ref="STDOUT" />
	</logger>
	
	<logger name="org.springframework" level="DEBUG" additivity="false">
		<appender-ref ref="STDOUT" />
	</logger>
	
	<root level="ALL">
		<appender-ref ref="STDOUT" />
	</root>

</configuration>